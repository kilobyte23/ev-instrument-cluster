import QtQuick
import QtQuick.Layouts
import "."

Item {
    id: root
    
    // Car Cluster (More comprehensive, includes Map)
    
    RowLayout {
        anchors.fill: parent
        anchors.margins: 20
        spacing: 20
        
        // Left: Gauges
        GaugeCluster {
            Layout.fillHeight: true
            Layout.preferredWidth: parent.width * 0.4
        }
        
        // Center: Map
        MapView {
            Layout.fillHeight: true
            Layout.fillWidth: true
        }
        
        // Right: Trip & Info
        ColumnLayout {
            Layout.fillHeight: true
            Layout.preferredWidth: 250
            spacing: 20
            
            BatteryDisplay {
                Layout.preferredHeight: 150
                Layout.fillWidth: true
            }
            
            TripComputer {
                Layout.preferredHeight: 150
                Layout.fillWidth: true
            }
            
            Item { Layout.fillHeight: true } // Spacer
        }
    }
}
